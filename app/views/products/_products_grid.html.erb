<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Brand</th>
       <th>Category</th>
        <th>Sold</th>
      <th>Stock</th>
      <th>Price</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% resource.products.current.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%= product.brand %></td>
         <td><%= product.category.name %></td>
         <% if product.orders.where(active: true).count > 0 %>
        <td><%= link_to product.orders.where(active: true).count, orders_by_product_id_path(product.id) %></td>
        <% else %>
        <td>0</td>
        <% end %>
        <td><%= product.stock %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class:"btn btn-sm btn-outline-secondary" %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>