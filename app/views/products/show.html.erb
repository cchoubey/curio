<br/>
<div class="container jumbotron">

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>
<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>

<p>
  <strong>Stock:</strong>
  <%= @product.stock %>
</p>

<p>
  <strong>Images:</strong>
  <% (0...@product.images.count).each do |image| %>
    <%= image_tag(@product.thumbnail(image), class:"img-fluid img-thumbnail")  %>
  <% end %>
</p>

<p>
  <strong>Active:</strong>
  <%= @product.active %>
</p>


<%= link_to 'Edit', edit_product_path(@product), class:"btn btn-secondary" %>  <%= link_to 'Back', :back, class:"btn btn-secondary" %>
</div>
