<div class="container">
<% if !@users.nil? && !@users[0].first_name.nil? %>
        <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Active</th>
            <th>Type</th>
            <th></th>
            </tr>
        </thead>

        <tbody>
            <% @users.each do |user| %>
            <tr>
        
                <td><%= link_to user.first_name + ' ' + user.last_name, admin_edit_user_path(user.id), method: :delete %></td>       
                <td><%= user.email %></td>
                <td><%= user.active %></td>
                <td><%= user.client_type %></td>
                <%if user.active == true %>
                <td><%=  link_to 'Delete', admin_destroy_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-danger" %></td>
                <%else%>
                <td><%=  link_to 'Un-Delete', admin_destroy_user_path(user.id), method: :delete, class:"btn btn-sm btn-outline-danger" %></td>
                <%end%>
            </tr>
            <% end %>      
        </tbody>
        </table>
<% else %>
<h1>no user found</h1>
 <%end %>
<br>
</div>


