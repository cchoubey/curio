<div class="container">

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Active</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
         <td><%= category.description %></td>
        <td><%= category.active %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class:"btn btn-sm btn-outline-secondary" %></td>
        <% if category.active? %>
        <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-danger" %></td>
        <% else %>
        <td><%= link_to 'Un-Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-secondary" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class:"btn btn-secondary" %>
</div>
